<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Buy Packages</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/home.css">

  <style>
    body {
      background:#000;
      color:#fff;
      padding:20px;
      font-family: Arial, sans-serif;
    }

    h1, h2 {
      margin-bottom:16px;
    }

    .grid {
      display:grid;
      grid-template-columns:repeat(auto-fit, minmax(250px, 1fr));
      gap:20px;
      margin-bottom:30px;
    }

    .card {
      background:#111;
      border:1px solid #333;
      border-radius:12px;
      padding:16px;
    }

    .price {
      color:#d4af37;
      font-weight:bold;
      margin-bottom:8px;
    }

    button {
      background:#d4af37;
      border:none;
      padding:10px 14px;
      cursor:pointer;
      border-radius:6px;
      margin-top:8px;
    }

    .cart {
      margin-bottom:30px;
      padding:16px;
      border:1px solid #333;
      border-radius:12px;
      background:#111;
    }

    input, select {
      width:100%;
      padding:10px;
      margin:8px 0;
      border-radius:6px;
      border:1px solid #333;
      background:#000;
      color:#fff;
    }

    .total {
      margin-top:10px;
      font-weight:bold;
      color:#d4af37;
    }
  </style>
</head>

<body>

<h1>Buy Packages</h1>

<!-- ================= PACKAGES ================= -->
<div class="grid">
  <% products.forEach(p => { %>
    <div class="card">
      <h3><%= p.name %></h3>
      <div class="price">$<%= p.price %></div>
      <p><%= p.description %></p>

      <button onclick='addToCart("<%= p._id %>", "<%= p.name %>", <%= p.price %>)'>
        Add to Cart
      </button>
    </div>
  <% }) %>
</div>

<!-- ================= CART ================= -->
<div class="cart">
  <h2>Your Cart</h2>
  <ul id="cartList">
    <li>No items added.</li>
  </ul>
  <div class="total" id="totalPrice">$0</div>
</div>

<!-- ================= CHECKOUT ================= -->
<h2>Checkout</h2>

<form method="POST" action="/buy" onsubmit="return validateForm()">
  <input type="hidden" name="cart" id="cartInput">

  <input type="text" name="name" id="name" placeholder="Full Name *" required>
  <input type="email" name="email" id="email" placeholder="Email *" required>
  <input type="text" name="phone" id="phone" placeholder="Phone (numbers only)">
  <input type="text" name="address" id="address" placeholder="Address *" required>
  <input type="text" name="city" id="city" placeholder="City *" required>
  <input type="text" name="postal" id="postal" placeholder="Postal Code *" required>
  <input type="text" name="country" id="country" placeholder="Country *" required>

  <select name="payment" required>
    <option value="">Select Payment</option>
    <option value="Card">Card</option>
    <option value="Cash">Cash</option>
  </select>

  <button type="submit">Place Order</button>
</form>

<script>
  const cart = [];

  function addToCart(id, name, price) {
    cart.push({ id, name, price });
    renderCart();
  }

  function renderCart() {
    const list = document.getElementById("cartList");
    const totalEl = document.getElementById("totalPrice");
    list.innerHTML = "";

    let total = 0;

    cart.forEach(item => {
      total += item.price;
      const li = document.createElement("li");
      li.textContent = `${item.name} - $${item.price}`;
      list.appendChild(li);
    });

    if (cart.length === 0) {
      list.innerHTML = "<li>No items added.</li>";
    }

    totalEl.textContent = "$" + total;
    document.getElementById("cartInput").value = JSON.stringify(cart);
  }

  function validateForm() {
    const name = document.getElementById("name").value.trim();
    const phone = document.getElementById("phone").value.trim();
    const city = document.getElementById("city").value.trim();
    const country = document.getElementById("country").value.trim();
    const postal = document.getElementById("postal").value.trim();

    if (!/^[A-Za-z ]+$/.test(name)) {
      alert("Name must contain letters only.");
      return false;
    }

    if (phone && !/^[0-9]+$/.test(phone)) {
      alert("Phone must contain numbers only.");
      return false;
    }

    if (!/^[A-Za-z ]+$/.test(city)) {
      alert("City must contain letters only.");
      return false;
    }

    if (!/^[A-Za-z ]+$/.test(country)) {
      alert("Country must contain letters only.");
      return false;
    }

    if (!/^[A-Za-z0-9 ]+$/.test(postal)) {
      alert("Postal code must contain letters and numbers only.");
      return false;
    }

    if (cart.length === 0) {
      alert("Please add at least one package to the cart.");
      return false;
    }

    return true;
  }
</script>

</body>
</html>
